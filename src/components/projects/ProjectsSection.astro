---
import { PROJECTS } from "../../constants";
---

<section id="projects" class="pt-16">
  <div class="mx-8">
    <h2 class="text-center text-2xl font-medium text-gray-200 sm:text-4xl">
      PROJECTS
    </h2>
    <div class="mt-16 grid gap-4 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
      {
        PROJECTS.map((project) => (
          <div class="flex h-full flex-1 flex-col gap-4 rounded-lg p-4 transition-all hover:bg-slate-800">
            <h3 class="text-xl font-bold text-white">{project.title}</h3>
            <p class="text-start text-base text-slate-300">
              {project.description}
            </p>
            <div class="text-start font-mono text-sm">
              {project.technologies.map((technology) => (
                <a
                  aria-label={`Go to the ${technology.name} website`}
                  href={technology.url}
                  rel="noreferrer"
                  target="_blank"
                  class="my-1 me-2 inline-flex rounded-full bg-slate-700 px-2 py-1 transition-all hover:opacity-75"
                >
                  {technology.name}
                </a>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
