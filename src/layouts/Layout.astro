---
import "@fontsource/sen";
import "@fontsource/fira-code";
import "@fontsource/fira-code/500.css";
import "@fontsource/fira-code/600.css";
import "@fontsource/fira-code/700.css";
import BaseHead from "~/components/BaseHead.astro";
import Footer from "~/components/footer/Footer.astro";
import Frame from "~/components/Frame.astro";
import Navbar from "~/components/navbar/Navbar.astro";
import BackgroundGradientAnimation from "~/components/ui/background-gradient-animation";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-gradient-to-b from-ctp-base h-screen to-ctp-crust">
  <head>
    <BaseHead />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>

  <body
    class="ctp-mocha overflow-hidden h-screen text-ctp-text max-w-screen-2xl flex flex-col mx-auto"
  >
    <BackgroundGradientAnimation transition:name="gradient" client:load />
    <Frame />
    <Navbar />
    <main
      class="flex flex-1 lg:shadow-container-shadow bg-ctp-base/80 flex-col overflow-y-auto mx-2 lg:mx-8 border-ctp-surface2"
    >
      <slot />
    </main>
    <Footer transition:name="footer" />
  </body>
</html>
<style is:global>
  html {
    scroll-behavior: smooth;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  @media (prefers-reduced-motion: reduce) {
    :global(html) {
      scroll-behavior: auto;
    }
  }
</style>
